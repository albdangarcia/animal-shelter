# Secret key for authentication
AUTH_SECRET = ""

# GitHub OAuth credentials (obtain from GitHub Developer settings)
AUTH_GITHUB_ID = ""
AUTH_GITHUB_SECRET = ""

# Trust host for authentication (true/false)
AUTH_TRUST_HOST = "true"

# PostgreSQL database credentials
POSTGRES_USER = "postgres"
POSTGRES_PASSWORD = "mysecretpassword"
# POSTGRES_HOST = "localhost"  # For local development
POSTGRES_HOST = "postgres"  # Docker Compose service name
